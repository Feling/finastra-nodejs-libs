{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@ffdc/nestjs-oidc": ["libs/oidc/src"],
      "@ffdc/nestjs-oidc/*": ["libs/oidc/src/*"],
      "@ffdc/nestjs-proxy": ["libs/proxy/src"],
      "@ffdc/nestjs-proxy/*": ["libs/proxy/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
